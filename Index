    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIMM - Sistema de Informação de Mortalidade Municipal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .sensitive-data {
            transition: all 0.3s ease;
        }
        .anonymized .sensitive-data {
            filter: blur(5px);
            user-select: none;
            color: transparent;
        }
        @media print {
            .no-print { display: none; }
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen font-sans">

    <!-- Header -->
    <header class="bg-blue-700 text-white shadow-lg no-print">
        <div class="container mx-auto px-4 py-6 flex justify-between items-center">
            <div>
                <h1 class="text-2xl font-bold">SIMM</h1>
                <p class="text-sm opacity-80">Sistema de Informação de Mortalidade Municipal</p>
            </div>
            <div class="flex gap-4">
                <button id="toggleAnonymize" class="bg-blue-600 hover:bg-blue-500 px-4 py-2 rounded-lg transition text-sm font-medium border border-blue-400">
                    Modo LGPD: Ativo
                </button>
                <button onclick="window.print()" class="bg-white text-blue-700 hover:bg-gray-100 px-4 py-2 rounded-lg transition text-sm font-medium">
                    Imprimir Relatório
                </button>
            </div>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8">
        
        <!-- Form Section -->
        <section class="bg-white rounded-xl shadow-md p-6 mb-8 no-print">
            <h2 class="text-xl font-semibold mb-4 text-gray-800 border-b pb-2">Novo Registro de Óbito</h2>
            <form id="deathForm" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Nº da DO</label>
                    <input type="text" id="doNumber" required class="mt-1 w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-500 outline-none">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Nome Completo (Sensível)</label>
                    <input type="text" id="fullName" required class="mt-1 w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-500 outline-none">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">CPF (Sensível)</label>
                    <input type="text" id="cpf" required placeholder="000.000.000-00" class="mt-1 w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-500 outline-none">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Data do Óbito</label>
                    <input type="date" id="deathDate" required class="mt-1 w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-500 outline-none">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Causa Primária (CID-10)</label>
                    <input type="text" id="cause" required placeholder="Ex: I21.9" class="mt-1 w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-500 outline-none">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Local do Óbito</label>
                    <select id="locationType" class="mt-1 w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-500 outline-none">
                        <option value="Hospital">Hospital</option>
                        <option value="Domicílio">Domicílio</option>
                        <option value="Via Pública">Via Pública</option>
                        <option value="Outros">Outros</option>
                    </select>
                </div>
                <div class="md:col-span-3 flex justify-end">
                    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg font-bold transition">
                        Registrar Óbito
                    </button>
                </div>
            </form>
        </section>

        <!-- List Section -->
        <section class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="p-6 border-b flex justify-between items-center">
                <h2 class="text-xl font-semibold text-gray-800">Registros Ativos</h2>
                <span id="recordCount" class="bg-blue-100 text-blue-800 text-xs font-bold px-2.5 py-0.5 rounded-full uppercase">0 Registros</span>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse" id="deathTable">
                    <thead>
                        <tr class="bg-gray-100 text-gray-600 uppercase text-xs">
                            <th class="p-4 border-b">DO</th>
                            <th class="p-4 border-b">Nome</th>
                            <th class="p-4 border-b">CPF</th>
                            <th class="p-4 border-b">Data</th>
                            <th class="p-4 border-b">Causa (CID)</th>
                            <th class="p-4 border-b">Local</th>
                            <th class="p-4 border-b no-print">Ações</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody" class="text-gray-700">
                        <!-- Linhas serão inseridas aqui via JS -->
                    </tbody>
                </table>
            </div>
        </section>
    </main>

    <footer class="container mx-auto px-4 py-8 text-center text-gray-500 text-sm">
        <p>SIMM &copy; 2026 - Licença MIT. Projeto de Vigilância Epidemiológica Municipal.</p>
    </footer>

    <script>
        let records = [];
        let isAnonymized = false;

        const deathForm = document.getElementById('deathForm');
        const tableBody = document.getElementById('tableBody');
        const toggleBtn = document.getElementById('toggleAnonymize');
        const recordCount = document.getElementById('recordCount');

        // Toggle LGPD Mode
        toggleBtn.addEventListener('click', () => {
            isAnonymized = !isAnonymized;
            document.body.classList.toggle('anonymized', isAnonymized);
            toggleBtn.textContent = isAnonymized ? "Modo LGPD: Ativado" : "Modo LGPD: Desativado";
            toggleBtn.classList.toggle('bg-red-600', isAnonymized);
            toggleBtn.classList.toggle('bg-blue-600', !isAnonymized);
        });

        // Form Submit
        deathForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const newRecord = {
                id: Date.now(),
                do: document.getElementById('doNumber').value,
                name: document.getElementById('fullName').value,
                cpf: document.getElementById('cpf').value,
                date: document.getElementById('deathDate').value,
                cause: document.getElementById('cause').value,
                location: document.getElementById('locationType').value
            };

            records.push(newRecord);
            renderTable();
            deathForm.reset();
        });

        function deleteRecord(id) {
            records = records.filter(r => r.id !== id);
            renderTable();
        }

        function renderTable() {
            tableBody.innerHTML = '';
            recordCount.textContent = `${records.length} Registros`;

            records.forEach(record => {
                const row = document.createElement('tr');
                row.className = "hover:bg-gray-50 transition border-b";
                row.innerHTML = `
                    <td class="p-4 font-mono text-sm">${record.do}</td>
                    <td class="p-4 sensitive-data">${record.name}</td>
                    <td class="p-4 sensitive-data text-xs">${record.cpf}</td>
                    <td class="p-4">${new Date(record.date).toLocaleDateString('pt-BR')}</td>
                    <td class="p-4"><span class="bg-gray-200 px-2 py-1 rounded text-xs font-bold">${record.cause}</span></td>
                    <td class="p-4">${record.location}</td>
                    <td class="p-4 no-print">
                        <button onclick="deleteRecord(${record.id})" class="text-red-500 hover:text-red-700 underline text-sm">Excluir</button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
        }

        // Dados de exemplo inicial
        window.onload = () => {
            records = [
                { id: 1, do: "2938472-1", name: "João da Silva Sauro", cpf: "123.456.789-00", date: "2025-12-25", cause: "I21.9", location: "Hospital" },
                { id: 2, do: "1122334-5", name: "Maria Oliveira de Souza", cpf: "987.654.321-11", date: "2025-12-28", cause: "C34.9", location: "Domicílio" }
            ];
            renderTable();
            // Inicia anonimizado por segurança
            isAnonymized = true;
            document.body.classList.add('anonymized');
        };
    </script>
</body>
</html>
